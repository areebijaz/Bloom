<div class="product-details">
  <div class="prod-details-top">
    <img class="img-fluid rounded pl-3 pr-3" src= "<%=product.img %>" />
    <div class="card-product-infos">
      <h2 class="font-weigh-bold" ><%= link_to "#{product.brand.name}", product_path(product), class: 'font-weight-bold product-card-title'%></h2>
      <p><%= product.title%></p>
    </div>
  </div class="prod-details-top">
    
  <div class="product-details-bottom">
    <p><%= product.user_rating%></p>
    <p>
      <% product.user_rating.to_i.times do %>
        <i class="fa fa-star checked"></i>
      <% end %>
    </p>
    <% unless product.safety_rating == 0 %>
    <div class="ingredient-card-rating">
      <div class="card-rating-container">
        <% rating = product.safety_rating %>
        <%= render 'shared/progresscircle', :locals => {"value" => rating} unless rating == nil %>
        <p>Safety</p>
      </div>
      <div class="card-rating-container">
        <% rating = product.efficacy_rating %>
        <%= render 'shared/progresscircle', :locals => {"value" => rating} unless rating == nil %>
        <p>Efficacy</p>
      </div>
    </div>
    <% end %>
  </div>  
</div>
