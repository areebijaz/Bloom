

<div class="container">
  <div class="flex-container-between">
    <div class="product-bio">
      <h1><%= @product.title %> </h1>
      <h2> <%= @product.brand.name %> </h2>
      <p> <%= @product.description %> </p>
      <% unless @product.safety_rating == 0 %>
      <div class="ratings-flex">
        <div class="product-show-rating-container">
            <% rating = @product.safety_rating %>
            <%= render 'shared/progresscircle', :locals => {"value" => rating} unless rating == nil %>
            <div class="h3-box">
              <h3>Ingredient</h3>
              <h3>Safety</h3>
            </div>
        </div>
        <div class="product-show-rating-container">
            <% rating = @product.efficacy_rating %>
            <%= render 'shared/progresscircle', :locals => {"value" => rating} unless rating == nil %>
            <div class="h3-box">
              <h3>Ingredient</h3>
              <h3>Efficacy</h3>
            </div>
        </div>
      </div>
      <% end %>
    </div>
    <div class="product-bio-image">
      <img src= "<%=@product.img %>" style="width: 300px" />
     <div>
        <% if user_signed_in? %>
          <% if @product.favorited_by?(current_user) %>

              <%= link_to product_unfavorite_path(@product), method: :delete, remote: true do %>
                  <i class="fas fa-heart"></i>
                  Unfavourite
                <% end %>
          <% else %>
            <%= link_to product_favorite_path(@product), method: :patch, remote: true  do %>
                    <i class="far fa-heart"></i>
                    Favourite
              <% end %>
          <% end %>
        <% else %>
          <%= link_to "Favourite", new_user_session_path, class: 'btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

