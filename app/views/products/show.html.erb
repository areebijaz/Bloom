          <% @product.user_rating.to_i.times do%>
          <i class="fa fa-star checked"></i>
          <% end %>
        </h2>
        <div class=”review-rating” data-score = “<%= 3 %>”></div>
        <!-- Trigger/Open The Modal -->
        <button id="myBtn" class="btn-ghost">Leave A Review</button>

        <!-- The Modal -->
