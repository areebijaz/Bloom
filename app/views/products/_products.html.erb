<div class="product-text-container">
  <p> search for XX products </p>
</div>

<div class="product-card-grid">
    <% products.each do |product| %>
      <div class="product-details">
        <img src= "<%=product.img %>" style="width: 300px" />
        <div class="card-product-infos">
            <h2><%= link_to "#{product.title} - #{product.brand.name}", product_path(product), class: 'card-link'%></h2>
            <p><%= product.oneliner%></p>
        </div>
      </div>
    <% end %>
</div>

<div>
  <% if params[:product_search].nil? %>
    <ul>
      <li>
          <%= link_to_if @page > 0, "<< Previous", products_path(page: @page - 1) %>
      </li>
      <li>
          <%= link_to_if @page < (Product.count/12)  , "Next >>", products_path(page: @page + 1) %>
      </li>
    </ul>
    <% end %>
</div>
