<div class ="container">
  <div class="product-top-nav">
    <h2>Cosmetic Main Listing</h2>
    <%= render 'shared/productsearchbarform' %>
  </div>

  <div id="product-search-flex">

    <div id="products-index-sidebar">
        <%= render partial: 'shared/filterform' %>
    </div>

    <div class="main-container">
      <div class="cards">
        <% @products.each do |product| %>
          <div class="ingredient-details">
            <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" style="width: 300px" />
            <div class="card-product-infos">
                <h2><%= link_to "#{product.title} - #{product.brand.name}", product_path(product), class: 'card-link'%></h2>
                <p><%= product.description%></p>
            </div>
          </div>
        <% end %>
      </div>

      <div>
   <ul class="pager">
      <li class="previous <%= @page == 0 ? 'disabled' : '' %>">
          <%= link_to_if @page > 0, "<< Previous", products_path(page: @page - 1) %>
      </li>

      <li class="next <%= @page >= (Product.count/12) ? 'disabled' : '' %>">
          <%= link_to_if @page <= (Product.count/12), "Next >>", products_path(page: @page + 1) %>
      </li>
   </ul>
</div>
    </div>
  </div>

  <div>
    <%= link_to "Take me home", root_path, class:"btn-primary" %>
    <%= link_to "back to ingredient search", ingredients_path, class:"btn-primary" %>
  </div>

</div>


