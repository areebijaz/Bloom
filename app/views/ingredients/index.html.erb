
<div class="container">
    <h2>Search for Ingredients</h2>
    <div id="ingredient-top-nav">
        <%= render 'shared/ingredientsearchbarform' %>
        <h3>X results</h3>
    </div>
    <div class="ingredient-grid">
        <% @ingredients.each do |ingredient| %>
            <div class="ingredient-details">
                <img class="ingredient-index-img" style="width: 300px" src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
                <div class="ingredient-card-infos">
                    <h2> <%= link_to ingredient.name, ingredient_path(ingredient) %></h2>
                    <p> <%= ingredient.description %> </p>
                    <p> average safety rating: <%= ingredient.average_safety_rating %> </p>
                    <p> average efficacy rating: <%= ingredient.average_efficacy_rating %> </p>
                    <p> <% ingredient.tag_list.each do |tag| %>
                    tags: <%= tag %>
                    </p>
                    <% end %>
                </div>
            </div>
        <% end %>
    </div>
</div>
<div>
    <%= link_to "Take me home", root_path, class:"btn-primary" %>
    <%= link_to "back to product search", products_path, class:"btn-primary" %>
    <%= link_to "back to ingredient search", ingredients_path, class:"btn-primary" %>
