<div class="container">
  <h1> <%= @ingredient.name %> </h1>

  <div class="container card">
    <p> description: <%= @ingredient.description %> </p>
    <ul>
      <li> safety rating: <%= @ingredient.average_safety_rating %> </li>
      <li> efficacy rating: <%= @ingredient.average_efficacy_rating %> </li>
    </ul>
  </div>

  <div class="container card">
    <% @ingredient.ingredient_reviews.each do |ingredient_review| %>
      <h3> review title: <%= ingredient_review.title %> </h3>
      <p> review content: <%= ingredient_review.content %> </p>
    <% end %>
  </div>

<% if current_user.verified  %>
  <div class="container">
    <%= render partial: 'ingredient_reviews/form' %>
  </div>
  <% end %>
</div>

